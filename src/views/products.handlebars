

<h1> Productos </h1>
<div class="contenedorCards">
{{#each productos}}

<div class="card">
    <h2>{{title}}</h2>
    <p>{{description}}</p>
    <p>Price: ${{price}}</p>
    <p>Category: {{category}} </p>
    <button> Agregar al Carrito </button>
</div>
{{/each}}
</div>

<div class="pageContainer">
{{#if hasNextPage}}
    <a href="/products?page={{nextPage}}"> Siguiente </a>
{{/if}} 
{{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}"> Anterior </a>
{{/if}}

<p class="pageProducts">Pagina {{currentPage}} de {{totalPages}} </p>
</div>